# Begin html.snippets

# Snippets for coding in HTML

# Include markup that was separated out for use in multiple contexts:
extends html-markup

snippet Typical_html_header
alias hdr     
options head
    <!DOCTYPE html>
    <html lang="en-US">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <title>${1:Webpage Title}</title>
      ${0}

snippet Typical_xhtml_header
alias xdr     
options head
    <!doctype xhtml />
    <html lang="en-US">
    <head>
    <meta charset="UTF-8" />

    <title>${1:Webpage Title}</title>
    ${0}

snippet Basic_html_outline
alias skel    
options head
    <!DOCTYPE html>
    <html lang="en-US">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <link rel="stylesheet" href="style.css" type="text/css" media="all" />

    </head>
    <body>
      ${0}
    </body>
    </html>

snippet Basic_xhtml_outline
alias xkel    
options head
    <!doctype xhtml />
    <html lang="en-US">
    <head>
    <meta charset="UTF-8" />

    <title>${1:Webpage Title}</title>

    </head>

    <body>
      ${0}

    </body>
    </html>

snippet CSS_Stylesheet_Inclusion
alias cs      
    <link rel="stylesheet" type="text/css" href="${1:stylesheet}">
    ${0}

snippet Comment_-_inline
alias cm      
  <!-- ${1:Insert Comment} -->${0}

snippet Comment_-_multiline
alias cmm     
options head
    <!-->
      ${1:Insert Comment}
    <!-->
    ${0}

snippet HTML5_Support_for_IE9_and_earlier
alias lt9     
options head
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js">
    </script>
    <![endif]-->

